<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.IntentFragment">

    <androidx.cardview.widget.CardView
        style="@style/MainCardView"
        android:id="@+id/mess_intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/pink"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/mess_intent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_double"
            android:layout_marginStart="@dimen/padding_double"
            android:text="Intencja Mszy Świętej"
            android:textSize="25dp"
            android:layout_gravity="top"/>

        <TextView
            android:id="@+id/mess_intent_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tutaj możesz zamówić termin intencji Mszy Świętej, Intencji zbiorowej i Gregoriańskej" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="250dp"
            android:layout_marginBottom="16dp"
            android:text="ZAMÓW" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/devine_service_intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/pink"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/devine_service_intent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_double"
            android:layout_marginStart="@dimen/padding_double"
            android:text="Intencja Nabożeństwa"
            android:textSize="25dp"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="250dp"
            android:layout_marginBottom="16dp"
            android:text="ZAMÓW" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/prayer_dor_the_dead_intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_weight="1"
        android:backgroundTint="@color/pink"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/prayer_dor_the_dead_intent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_double"
            android:layout_marginStart="@dimen/padding_double"
            android:text="Wypominki"
            android:textSize="25dp"/>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="250dp"
            android:layout_marginBottom="16dp"
            android:text="ZAMÓW" />


    </androidx.cardview.widget.CardView>



</androidx.appcompat.widget.LinearLayoutCompat>